import React from 'react';
import { useLexicalComposerContext } from '@lexical/react/LexicalComposerContext';
import { INSERT_HTML_COMMAND } from 'lexical';

function UploadHtmlFileButton() {
  const [editor] = useLexicalComposerContext();

  const handleUpload = (event) => {
    const file = event.target.files?.[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = () => {
      const htmlText = reader.result;

      // Insert HTML into Lexical (it will render as web content)
      editor.dispatchCommand(INSERT_HTML_COMMAND, htmlText);
    };
    reader.readAsText(file);
  };

  return (
    <input
      type="file"
      accept=".html,.htm"
      onChange={handleUpload}
      style={{ marginTop: '10px' }}
    />
  );
}

export default UploadHtmlFileButton;
